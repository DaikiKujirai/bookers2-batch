<div class="comments">
  <% @book.book_comments.each do |book_comment| %>
    <p><%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, fallback: "no_image" %></p>
    <%= book_comment.user.name %>
    <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
    <% if book_comment.user == current_user %>
      <p><%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class:"btn btn-danger mt-3" %></p>
    <% end %>
  <% end %>
</div>